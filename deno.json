{
  "name": "@beggy/beggy",
  "version": "0.1.0",
  "exports": {
    ".": "./main.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check main.ts",
    "precommit": "deno task fmt && deno task lint && deno task check"
  },
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "exclude": ["static/"]
  },
  "lint": {
    "rules": {
      "exclude": ["verbatim-module-syntax"]
    },
    "exclude": ["static/"]
  },
  "imports": {
    "@cross/env": "jsr:@cross/env@1.0.2",
    "@oak/oak": "jsr:@oak/oak@^17.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.45.0"
  },
  "compilerOptions": {
    "lib": ["deno.window"]
  }
}
